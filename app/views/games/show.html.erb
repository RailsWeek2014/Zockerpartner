<p id="notice"><%= notice %></p>

<p>
	<strong>Name:</strong>
	<%= @game.name %>
	<% if @game_users.where("user_id = ? AND game_id = ?", current_user.id, params[:id]).exists? %>
		<td>
			You play the game
		</td>
	<% else %>
		<td>
			You dont play the game
		</td>
	<% end %>
	<br><br>
	<strong>Description:</strong>
	<%= @game.description %>

</p>

<% if current_user.admin? %>
	<%= link_to 'Edit', edit_game_path(@game) %> |
<% end %>
<%= link_to 'Back', games_path %>
