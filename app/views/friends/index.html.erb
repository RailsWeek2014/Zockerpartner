<h1>Listing friends</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.friends.include? current_user %>
        <tr>
          <td>
            <%= link_to friend.name, profile_path(friend.id) %>
          </td>
          <td>
            <%#= link_to 'Edit', edit_friend_path(friend) %>
          </td>
          <td>
            <%= link_to 'Destroy', friend_path(friend), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

