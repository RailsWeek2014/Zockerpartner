<h1>Spielerliste</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |users| %>
      <tr>
        <td><%= users.name %>: </td>
        <% x = users.id %>

        <% @game_users.each do |y| %>
          <%if x == y.user_id %>
            <td><%= y.game.name %>, </td>
          <% end %>
        <% end %>
        

      </tr>
    <% end %>



  </tbody>
</table>

<br>

<%= link_to 'New Game user', new_game_user_path %>
